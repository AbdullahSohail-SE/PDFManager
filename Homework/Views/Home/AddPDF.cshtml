
@{
    ViewBag.Title = "AddPDF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <form action="AddPDF" method="post">
        <label class="text-primary">PDF Name:</label>
        <input class="form-control" type="text" name="pdfname" />
        <label class="d-block text-primary">Content</label>
        <textarea name="editor"></textarea>
        <button type="submit" class="btn btn-success mt-3">Save PDF</button>
    </form>

</div>

